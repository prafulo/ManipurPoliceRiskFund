// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole
  unitId    String?
  unit      Unit?    @relation(fields: [unitId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Unit {
  id        String    @id @default(cuid())
  name      String    @unique
  members   Member[]
  transfersFrom Transfer[] @relation("FromUnit")
  transfersTo   Transfer[] @relation("ToUnit")
  users     User[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Member {
  id                    String          @id @default(cuid())
  membershipCode        String          @unique @map("membership_code")
  name                  String
  fatherName            String          @map("father_name")
  rank                  String
  trade                 String
  serviceNumber         String          @map("service_number")
  badgeNumber           String          @map("badge_number")
  bloodGroup            String          @map("blood_group")
  memberPostType        MemberPostType  @map("member_post_type")
  joiningRank           String          @map("joining_rank")
  dateOfBirth           DateTime        @map("date_of_birth")
  dateOfEnrollment      DateTime        @map("date_of_enrollment")
  superannuationDate    DateTime        @map("superannuation_date")
  dateOfDischarge       DateTime?       @map("date_of_discharge")
  address               String          @db.Text
  phone                 String
  unitId                String          @map("unit_id")
  unit                  Unit            @relation(fields: [unitId], references: [id])
  status                MemberStatus    @default(Opened)
  closureReason         ClosureReason?  @map("closure_reason")
  closureNotes          String?         @db.Text @map("closure_notes")
  subscriptionStartDate DateTime        @map("subscription_start_date")
  parentDepartment      String?         @map("parent_department")
  dateApplied           DateTime        @map("date_applied")
  receiptDate           DateTime        @map("receipt_date")
  allotmentDate         DateTime        @map("allotment_date")
  firstWitness          String          @db.Json
  secondWitness         String          @db.Json
  nominees              String          @db.Json
  payments              Payment[]
  transfers             Transfer[]
  createdAt             DateTime        @default(now()) @map("created_at")
  updatedAt             DateTime        @updatedAt @map("updated_at")

  @@index([unitId])
}

model Payment {
  id          String   @id @default(cuid())
  memberId    String   @map("member_id")
  member      Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  amount      Decimal  @db.Decimal(10, 2)
  months      String   @db.Json
  paymentDate DateTime @map("payment_date")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([memberId])
}

model Transfer {
  id           String   @id @default(cuid())
  memberId     String   @map("member_id")
  member       Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  fromUnitId   String   @map("from_unit_id")
  fromUnit     Unit     @relation("FromUnit", fields: [fromUnitId], references: [id])
  toUnitId     String   @map("to_unit_id")
  toUnit       Unit     @relation("ToUnit", fields: [toUnitId], references: [id])
  transferDate DateTime @map("transfer_date")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@index([memberId])
  @@index([fromUnitId])
  @@index([toUnitId])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MemberStatus {
  Opened
  Closed
}

enum ClosureReason {
  Retirement
  Death
  Doubling
  Expelled
}

enum MemberPostType {
  Officiating
  Temporary
  Substantive
}

enum UserRole {
  SuperAdmin
  UnitAdmin
}
