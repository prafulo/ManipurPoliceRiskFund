// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole
  unitId    String?
  unit      Unit?    @relation(fields: [unitId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Unit {
  id      String   @id @default(uuid())
  name    String   @unique
  members Member[]
  users   User[]
  fromTransfers Transfer[] @relation("FromUnit")
  toTransfers   Transfer[] @relation("ToUnit")

  @@map("units")
}

model Member {
  id                    String         @id @default(uuid())
  membershipCode        String         @unique @map("membership_code")
  name                  String
  fatherName            String         @map("father_name")
  rank                  String
  trade                 String
  serviceNumber         String         @map("service_number")
  badgeNumber           String         @map("badge_number")
  bloodGroup            String         @map("blood_group")
  memberPostType        MemberPostType @map("member_post_type")
  joiningRank           String         @map("joining_rank")
  dateOfBirth           DateTime       @map("date_of_birth")
  dateOfEnrollment      DateTime       @map("date_of_enrollment")
  superannuationDate    DateTime       @map("superannuation_date")
  dateOfDischarge       DateTime?      @map("date_of_discharge")
  address               String
  phone                 String
  unitId                String         @map("unit_id")
  status                MemberStatus   @default(Opened)
  closureReason         ClosureReason? @map("closure_reason")
  closureNotes          String?        @map("closure_notes") @db.Text
  subscriptionStartDate DateTime       @map("subscription_start_date")
  parentDepartment      String?        @map("parent_department")
  dateApplied           DateTime       @map("date_applied")
  receiptDate           DateTime       @map("receipt_date")
  allotmentDate         DateTime       @map("allotment_date")
  firstWitness          Json           @db.Json
  secondWitness         Json           @db.Json
  nominees              Json           @db.Json
  createdAt             DateTime       @default(now()) @map("created_at")
  updatedAt             DateTime       @updatedAt @map("updated_at")

  unit      Unit       @relation(fields: [unitId], references: [id], onDelete: Cascade)
  payments  Payment[]
  transfers Transfer[]

  @@map("members")
}

model Payment {
  id          String   @id @default(uuid())
  memberId    String   @map("member_id")
  amount      Decimal  @db.Decimal(10, 2)
  paymentDate DateTime @map("payment_date")
  months      Json     @db.Json
  createdAt   DateTime @default(now()) @map("created_at")
  
  member Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model Transfer {
  id           String   @id @default(uuid())
  memberId     String   @map("member_id")
  fromUnitId   String   @map("from_unit_id")
  toUnitId     String   @map("to_unit_id")
  transferDate DateTime @map("transfer_date")
  createdAt    DateTime @default(now()) @map("created_at")

  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)
  fromUnit Unit   @relation("FromUnit", fields: [fromUnitId], references: [id], onDelete: Cascade)
  toUnit   Unit   @relation("ToUnit", fields: [toUnitId], references: [id], onDelete: Cascade)

  @@map("transfers")
}

model Setting {
  id    String @id @default(uuid())
  key   String @unique
  value String

  @@map("settings")
}

enum MemberStatus {
  Opened
  Closed
}

enum ClosureReason {
  Retirement
  Death
  Doubling
  Expelled
}

enum UserRole {
  SuperAdmin
  UnitAdmin
}

enum MemberPostType {
  Officiating
  Temporary
  Substantive
}
