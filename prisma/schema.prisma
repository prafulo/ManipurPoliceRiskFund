// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Unit {
  id      String    @id @default(uuid())
  name    String    @unique
  members Member[]
  users   User[]
  TransferFrom Transfer[] @relation("TransferFrom")
  TransferTo   Transfer[] @relation("TransferTo")
}

model Member {
  id                    String          @id @default(uuid())
  membershipCode        String          @unique @map("membership_code")
  name                  String
  fatherName            String          @map("father_name")
  rank                  String
  trade                 String
  serviceNumber         String          @map("service_number")
  badgeNumber           String          @map("badge_number")
  bloodGroup            String          @map("blood_group")
  memberPostType        MemberPostType  @map("member_post_type")
  joiningRank           String          @map("joining_rank")
  dateOfBirth           DateTime        @map("date_of_birth")
  dateOfEnrollment      DateTime        @map("date_of_enrollment")
  superannuationDate    DateTime        @map("superannuation_date")
  dateOfDischarge       DateTime?       @map("date_of_discharge")
  address               String
  phone                 String
  unitId                String          @map("unit_id")
  unit                  Unit            @relation(fields: [unitId], references: [id], onDelete: Restrict)
  status                MemberStatus    @default(Opened)
  closureReason         ClosureReason?  @map("closure_reason")
  closureNotes          String?         @map("closure_notes") @db.Text
  subscriptionStartDate DateTime        @map("subscription_start_date")
  nominees              Json
  firstWitness          Json            @map("first_witness")
  secondWitness         Json            @map("second_witness")
  parentDepartment      String?         @map("parent_department")
  dateApplied           DateTime        @map("date_applied")
  receiptDate           DateTime        @map("receipt_date")
  allotmentDate         DateTime        @map("allotment_date")
  createdAt             DateTime        @default(now()) @map("created_at")
  updatedAt             DateTime        @updatedAt @map("updated_at")
  payments              Payment[]
  transfers             Transfer[]
}

model Payment {
  id          String   @id @default(uuid())
  memberId    String   @map("member_id")
  member      Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  amount      Decimal  @db.Decimal(10, 2)
  paymentDate DateTime @map("payment_date")
  months      Json

  @@index([memberId])
}

model Transfer {
  id           String   @id @default(uuid())
  memberId     String   @map("member_id")
  member       Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  fromUnitId   String   @map("from_unit_id")
  fromUnit     Unit     @relation("TransferFrom", fields: [fromUnitId], references: [id], onDelete: Restrict)
  toUnitId     String   @map("to_unit_id")
  toUnit       Unit     @relation("TransferTo", fields: [toUnitId], references: [id], onDelete: Restrict)
  transferDate DateTime @map("transfer_date")
  createdAt    DateTime @default(now())

  @@index([memberId])
  @@index([fromUnitId])
  @@index([toUnitId])
}

model Setting {
  id    String @id @default(uuid())
  key   String @unique
  value String
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(UnitAdmin)
  unitId    String?  @map("unit_id")
  unit      Unit?    @relation(fields: [unitId], references: [id], onDelete: Restrict)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([unitId])
}


enum MemberStatus {
  Opened
  Closed
}

enum ClosureReason {
  Retirement
  Death
  Doubling
  Expelled
}

enum MemberPostType {
  Officiating
  Temporary
  Substantive
}

enum UserRole {
  SuperAdmin
  UnitAdmin
}
